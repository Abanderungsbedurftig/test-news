{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es2015"],
    "sourceMap": true,                        
    "outDir": "../dist",
    "removeComments": true,                   
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": ".",                           
    "paths": {
      "*": ["*"]
    },                                                                          
    "typeRoots": [
      "../types",
      "../node_modules/@types"
    ], 
  },
}
